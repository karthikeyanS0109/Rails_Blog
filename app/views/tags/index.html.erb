<p id="notice"><%= notice %></p>

<h1 class="container d-flex justify-content-center">Tags</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= link_to 'Show', tag ,class:"btn btn-primary"%></td>
        <td><%= link_to 'Edit', edit_tag_path(tag) ,class:"btn btn-info"%></td>
        <td><%= link_to 'Destroy', tag, method: :delete, data: { confirm: 'Are you sure?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %> |
