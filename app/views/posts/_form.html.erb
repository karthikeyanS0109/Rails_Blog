<%= form_with(model: [@topic, post], local: true, class:"new_form") do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group d-flex justify-content-center">
    <%#= form.label :title %>
    <%= form.text_field :title,class:"form-control w-25", placeholder:"Add Title to the post" %>
  </div>
  <br>

  <div class="field form-group d-flex justify-content-center">
    <%#= form.label :description %>
    <%= form.text_field :description,class:"form-control w-25", placeholder:"Add Description to the post" %>
  </div>
  <br>
  <div class="field form-group d-flex justify-content-center">
    <%#= form.label :tags %>
    <%= form.text_field :tags, value: @post.tags.map(&:name).join(","),class:"form-control w-25", placeholder:"Add Tags to the posts" %>
  </div>

  <br>
  <div class="field form-group d-flex justify-content-center">
    <%= form.file_field :image,class:"form-control w-25", placeholder:"Add Images to the posts"%>
  </div>
  <br><br>

  <div class="actions field form-group d-flex justify-content-center">
    <%= form.submit "Submit", id: "post-submit", class:"btn btn-outline-success" %>
  </div>
  <br>
<% end %>


