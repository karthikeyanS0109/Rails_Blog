<p id="notice"><%= notice %></p>

<p>
  <strong>Description:</strong>
  <%= @post.description %>
</p>

<p>
  <strong>Topic:</strong>
  <%= @post.topic_id %>
</p>

<strong>Tags:</strong>
<% @post.tags.each do |tag| %>
  <%= link_to tag, class: "btn btn-info"  do %>
    <span class="tags"><%= tag.name.capitalize %></span>
  <% end %>
<% end %>
<br>
<%#= form.file_field :image%>
<% if @post.image.attached? %>
  <%= image_tag @post.image, style:"width:300px;height:200px" %>
<% else %>
  <p>No image available for this post.</p>
<% end %>
<br>


<h3>Rating Counts:</h3>
<% (1..5).each do |value| %>
  <div><%= value %> star: <%= @rating_counts[value] || 0 %><br></div>
<% end %>

<h2>Ratings:</h2>
<%= form_for [@topic, @post, Rating.new] do |f| %>
  1 stars<%= f.radio_button :value, 1, onchange: 'this.form.submit();' %><br>
  2 stars<%= f.radio_button :value, 2, onchange: 'this.form.submit();' %><br>
  3 stars<%= f.radio_button :value, 3, onchange: 'this.form.submit();' %><br>
  4 stars<%= f.radio_button :value, 4, onchange: 'this.form.submit();' %><br>
  5 stars<%= f.radio_button :value, 5, onchange: 'this.form.submit();' %><br>
<% end %>

<h2>Comments:</h2>
<% @post.comments&.each do |comment| %>
  <div class="comment_show">
    <p><%= comment.content %></p>
  </div>
  <%= button_to 'Delete', topic_post_comment_path(@topic, @post, comment), method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } %>
  <hr>
<% end %>


<!-- Comment form -->
<%= form_for([@topic ,@post, Comment.new]) do |form| %>
  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 4 %>
  </div>

  <div class="actions">
    <%= form.submit 'Save Comment' %>
  </div>
<% end %>

<%= link_to 'Edit', edit_topic_post_path(@post) %> |
<%= link_to 'Back', topic_posts_path %>
